<body class="page--body">
	<Navbar/>
	<section class="principal--section">
		<div class="principal--section__text animate__animated animate__fadeInUp">
			<h3>EXPERTOS EN SOLUCIONES DE TRANSFORMACION DIGITAL</h3>
			<h1>Transforma Tu Negocio Con Nosotros</h1>
			<button class="principal--section__button" id="landingbutton">Contactanos</button>
		</div>
		<div class="image--container animate__animated animate__fadeInUp">
			<img src={Planet} alt="Planeta Principal" >
		</div>
	</section>
	<section>
		<h2 class="section--title"><span style="color: #F5F5F5;">Nuestras</span> Soluciones</h2>
		<div class="container--cards animate__animated animate__fadeInUp">
			<Card title="Infraestructura" srcname="/../../Infraestructura.png" hrefname="/servicios/Infraestructura"/>
			<Card title="Analitica Avanzada" srcname="/../../Analitica Avanzada.png" hrefname="/servicios/Analiticaavanzada"/>
			<Card title="Productividad" srcname="/../../Productividad.png" hrefname="/servicios/Productividad" />
			<Card title="Ciberseguridad" srcname="/../../Ciberseguridad.png" hrefname="/servicios/Ciberseguridad"/>
			<Card title="Fabrica de Software" srcname="/../../Desarrollo a Medida.png" hrefname="/servicios/Fabricadesoftware"/>
			<Card title="Hiperautomatizacion" srcname="/../../Hiperautomatizacion.png" hrefname="/servicios/Hiperautomatizacion"/>
		</div>
		<h2 class="section--title"><span style="color: #F5F5F5;">Nuestras</span> Apps</h2>
		<div class="container--apps">
			<Apps link = {Intrapoint} href ="/Intrapoint"/>
			<Apps link = {Isodocu} href ="/Isodocu"/>
			<Apps link = {Scania} href ="/Scania"/>
		</div>
		<h2 class="section--title"><span style="color: #F5F5F5;">Nuestros</span> Partners</h2>
		<div class="container--partners">
			<Partners src= {BrandOne}/>
			<Partners src= {BrandTwo}/>
			<Partners src= {BrandThree}/>
			<Partners src= {BrandFour}/>
			
		</div>
		<div>
			<Contactanos/>
		</div>
		<Footer/>
	</section>
</body>

<style>
	*{
		margin: 0;
		padding: 0;
	}
	body{
		padding: 0;
		overflow-x:hidden;
		margin-left: 0;
	}
	.page--body{
        height: 100%; 
		background: radial-gradient(100% 100% at 50% 0%, #1F2063 0%, #1D5AAA 100%);

	}
	
	.principal--section{
		display: grid;
		grid-template-columns: 50% 50%;
		align-content: center;
		padding-left: 16%;
		padding-right: 16%;
		background: url("/public/Pathern.png");
	}
	.principal--section img{
		width: 33.63rem;
		padding-top: 39px;
	}
	.principal--section__text h3{
		font-family: 'Inter';
		font-style: normal;
		font-weight: 500;
		font-size: clamp(0.5rem, 1rem,1.5rem);
		line-height: 24px;
		color: #FFDC9A;
	}
	.principal--section__text h1{
		font-family: 'Inter';
		font-style: normal;
		font-weight: 600;
		font-size: clamp(0.4rem, 4rem, 5rem);
		line-height: 77px;
		color: #FFFFFF;
		margin-bottom: 35px;
	}
	.principal--section__text {
		padding-top: 105px;
	}
	.principal--section__button{
		border: 1px solid #FFDC9A;
		border-radius: 7px;
		width: 187px;
        height: 56px;
		background-color: transparent;
		color:#FFDC9A;
		font-family: 'Poppins';
		font-style: normal;
		font-weight: 600;
		font-size: 1.25rem;
		line-height: 30px;
		cursor: pointer;
	}
	.container--cards{
		display: grid;
		grid-template-columns: 1fr 1fr 1fr ;
		gap: 30px;
		padding-left: 16%;
		padding-right: 16%;
	}
	.section--title{
	padding-top: 10%;
	padding-bottom: 10%;
	font-family: 'Poppins';
	font-style: normal;
	font-weight: 600;
	font-size:calc(30px,56px,100px);
	text-align: center;
	color: #FFDC9A;
	background: url("/public/Pathern.png");
	}
	.container--apps{
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		gap: 30px;
		padding-left: 16%;
		padding-right: 16%;
	}
	.container--partners{
		display: grid;
		grid-template-columns: 1fr 1fr 1fr 1fr;
		gap: 30px;
		padding-left: 16%;
		padding-right: 16%;
	}
	.principal--section__button:hover{
		background-color: rgb(255,220,154,0.1) ;
	}

	@media screen and (max-width: 600px) {

		body{
            padding-left: 1%;
            padding-right: 1%;
        }

	.principal--section{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-items: center;

	}
	.image--container img{
		width: 18em;
	}

	.container--cards{
		display: grid;
		grid-template-columns: auto;
		gap: 30px;
	}
	.principal--section__text h3{
		text-align: center;
	}
	.principal--section__text h1{
		text-align: center;
	}
	.principal--section__text{
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	.container--apps{
		display: flex;
		flex-direction: column;
	}

	.container--partners{
		display: grid;
		grid-template-columns: 1fr 1fr;
	}
}


	

</style>


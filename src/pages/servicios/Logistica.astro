        font-size: 45px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
    }

    .principal--subcontainer p{
        color: #000;
        font-family: Montserrat;
        font-size: 28px;
        font-style: normal;
        font-weight: 300;
        line-height: normal;
    }

    .background{
        position: absolute;
        right: -100px;
        top:20px;
        z-index: -1;
    }

    .secondary-container{
        display: flex;
        flex-direction: column;
    }

    .secondary-container h2{
        color: #000;
        font-family: Montserrat;
        font-size: 45px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
    }

    .secondary-container p{
        color: #000;
        font-family: Montserrat;

        --p-fontsize-min: 1.125em;
        --p-fontsize-max: 1.4375em;
        --p-fontsize-value: 1.02em + 0.53vw;
        --button-color: #1D4BD4;
        --text-white:#FFFFFF;
    }

    body{
        margin-left:5% ;
        margin-right: 5%;
        overflow-x: hidden;
    }

    .form--framer{
        border: 0;
        width: 700px;
        height: 500px;
    }


    .principal--container{
        display: flex;
        flex-direction: row;
        align-items: center;
        height: 100vh;
    }

    .principal--subcontainer{

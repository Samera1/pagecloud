---
import Navbar from '../../components/Landing-components/Navbar.astro';
import Layout from '../../layouts/Layout.astro';
import Title from '../../components/Landing-components/RE1-Titulo.astro';
import Descript from "../../components/Landing-components/RE4-Descript.astro";
import Infoproducto from '../../components/Landing-components/Infoproducto.astro';
import Docsproducto from '../../components/Landing-components/Docsproducto.astro';
import Footer from '../../components/Landing-components/Footer.astro';
import Caracteristicasprod from '../../components/Landing-components/Caracteristicasprod.astro';
import Contactanos from '../../components/Landing-components/Contactanos.astro';
import Detalles from '../../components/Landing-components/Detalles.astro';
import Soluciones from '../../layouts/Soluciones.astro';
---

<Soluciones title="Process Mining">
    <Navbar/>
    <section class="principal-section">
        <Title description="Process Mining" subtitle=""/>
        <div class="beneficios--container animate__animated animate__fadeInUp">
            <Descript percent="30%" description="Reducción en tiempos de proceso al identificar y resolver ineficiencias"/>
            <Descript percent="70%" description="Tareas automatizadas en empresas tras implementar análisis de procesos"/>
            <Descript percent="85%" description="Mejora en precisión de decisiones basadas en datos analizados automáticamente"/>
        </div>
        <div class="button--container">
            <button class="principal--section__button animate__animated animate__fadeInUp" id="landingbutton">Contactanos</button>
        </div>
    </section>
    <section class="secondary-section">
        <div class="info-producto-container">
            <Infoproducto icon="../../ProcessMining.svg" title="Process Mining" description="Identifica ineficiencias en tiempo real y aplica soluciones basadas en datos procesados, mejorando la eficiencia operativa y reduciendo costos sin necesidad de análisis manuales extensos." href="../../ProcessMinigIcons.png" />
            <Docsproducto image="../../ProcessMiningDocs.png" />
        </div>
    </section>
    <section>
        <Caracteristicasprod description="La minería de procesos es una técnica diseñada para descubrir, monitorear y mejorar procesos extrayendo conocimiento fácilmente disponible de los sistemas de información." image="../../ProcessMainingBanner.png"    />
    </section>
    <section class="details--section">
        <Detalles title="Identifica cuellos de botella rápidamente" descript="Visualiza y analiza procesos para detectar puntos críticos e ineficiencias en tiempo récord."/>
        <Detalles title="Optimiza operaciones automáticamente" descript="Aprovecha insights procesables para implementar mejoras que incrementan la eficiencia operativa sin esfuerzo manual."/>
        <Detalles title="Aumenta la productividad empresarial" descript="Libera a tu equipo de tareas repetitivas, permitiéndoles enfocarse en actividades estratégicas y de alto valor."/>
        <Detalles title="Decisiones basadas en datos precisos" descript="Mejora tu toma de decisiones utilizando análisis detallados basados en datos procesados en tiempo real."/>
    </section>
    <Contactanos/>
    <Footer/>
</Soluciones>

<style>
    *{
		margin: 0;
		padding: 0;
	}

	body{
		overflow-x:hidden !important;
		margin-left: 0;
        height: 100%; 
		background: radial-gradient(100% 100% at 50% 0%, #1F2063 0%, #1D5AAA 100%);
	}

    .details--section{
        display: flex;
        flex-direction: row;
        padding-left: 16%;
        padding-right: 16%;
        margin-top: 52px;
    }
    .principal-section{
        background: url("/public/Pathern.png");
        width: 100%;
        height: 60%;
        padding-left: 16%;
		padding-right: 16%;
    }
    .beneficios--container{
        display: grid;
        grid-template-columns: 0.8fr 0.8fr 0.8fr;
        text-align: center;
        column-gap: 68px;
        padding-top: 50px;
        padding-bottom: 50px;
    }

    .principal--section__button{
		border: 1px solid #FFDC9A;
		border-radius: 7px;
		width: 187px;
        height: 56px;
		background-color: transparent;
		color:#FFDC9A;
		font-family: 'Poppins';
		font-style: normal;
		font-weight: 600;
		font-size: 1.25rem;
		line-height: 30px;
		cursor: pointer;
	}
    .button--container{
        display: flex;
        justify-content: center;
        padding-bottom: 200px;
    }

    .secondary-section{
        background-color: white;
        width: 100%;
        height: 630px;
        display: flex;
        flex-direction: row;
        align-items: center;
        align-content: center;
        align-self: center;
        padding-left: 8%;
        padding-right: 8%;
    }

    .info-producto-container{
        display: flex;
        flex-direction: row;
        gap: 15%;
    }

    @media screen and (max-width: 600px) {
        .beneficios--container{
        display: flex;
        flex-direction: column;
        text-align: center;
        gap: 68px;
        padding-top: 50px;
        padding-bottom: 50px;
        }

        .info-producto-container{
            display: flex;
            flex-direction: column;
        }
        
        .details--section{
        display: flex;
        flex-direction: column;
        gap: 30px;
        padding-left: 16%;
        padding-right: 16%;
        margin-top: 52px;
    }



    }

</style>
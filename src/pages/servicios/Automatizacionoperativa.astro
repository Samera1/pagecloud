        --p-fontsize-min: 1.125em;
        --p-fontsize-max: 1.4375em;
        --p-fontsize-value: 1.02em + 0.53vw;
        --button-color: #377DFF;
        --text-black:#000000;
    }

    body{
        margin-left:5% ;
        margin-right: 5%;
        overflow-x: hidden;
    }

    .principal-section{
        height: 100vh;
        width: 100%;
        display: flex;
        flex-direction: row;
       justify-content: center;
       align-items: center;
    }

    .principal-section h2{
        font-family: Inter;
        font-weight: 900;
        line-height: 81px;
        font-size: 60px;
    }

    .principal-container{
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .principal-section p{
        font-family: Inter;
        font-weight: lighter;
        line-height: 29px;
        font-size: 22px;
    }

